---
import "../styles/global.css";
const { title = "Thomas Manch" } = Astro.props;
const path = Astro.url.pathname;
const showBrand = path !== "/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;600&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    >

    <title>{title}</title>
    <meta name="description" content="Personal website" />
  </head>

  <body>
    <div class="page">
      <aside class="sidebar">
        {showBrand ? <div class="brand">Thomas Manch</div> : null}

        <nav aria-label="Primary">
          <a href="/" aria-current={path === "/" ? "page" : undefined}>About</a>
          <a href="/writing" aria-current={path.startsWith("/writing") ? "page" : undefined}>Reporting</a>
          <a href="/blog" aria-current={path.startsWith("/blog") ? "page" : undefined}>Blog</a>
          <a href="/how-to-talk-to-a-journalist" aria-current={path.startsWith("/how-to-talk-to-a-journalist") ? "page" : undefined}>Talk to a reporter</a>
          <a href="/contact" aria-current={path.startsWith("/contact") ? "page" : undefined}>Contact me</a>
        </nav>
      </aside>

      <main>
        <slot />

        <footer class="site-footer">
          Â© {new Date().getFullYear()} Thomas Manch
        </footer>
      </main>
    </div>
  </body>
</html>
