---
import BaseLayout from "../../layouts/baselayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = (await getCollection("blog")).filter((p) => !p.data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug.replace(/\/index$/, "") },
    props: { post },
  }));
}

const { post } = Astro.props;
const description = post.data.description ?? undefined;
const publishedTime = post.data.date ?? undefined;
const { Content } = await post.render();
---

<BaseLayout
  title={post.data.title}
  description={description}
  ogType="article"
  publishedTime={publishedTime}
>
  <h2>{post.data.title}</h2>
  <p class="muted"><time datetime={post.data.date.toISOString()}>{post.data.date.toISOString().slice(0, 10)}</time></p>
  <Content />
</BaseLayout>
