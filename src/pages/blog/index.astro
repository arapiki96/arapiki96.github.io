---
import BaseLayout from "../../layouts/baselayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const normalizeSlug = (slug) => slug.replace(/\/index$/, "");
---

<BaseLayout
  title="Blog"
  description="Notes, analysis, and occasional updates."
>
  <h1>Blog</h1>
  <p class="muted">Errant thoughts</p>

  <ul>
    {posts.map((post) => (
      <li>
        <a href={`/blog/${normalizeSlug(post.slug)}/`}>{post.data.title}</a>
        <span class="muted">
          {" "}â€” {post.data.date.toISOString().slice(0, 10)}
        </span>
        {post.data.description ? <div class="muted">{post.data.description}</div> : null}
      </li>
    ))}
  </ul>
</BaseLayout>
